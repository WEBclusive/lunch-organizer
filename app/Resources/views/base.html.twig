<!DOCTYPE html>
<html lang="en">
    <head>
        <meta charset="UTF-8" />
        <title>{% block title %}WEBclusive Lunch Organizer{% endblock %}</title>
        <link rel="stylesheet" href="{{ asset('css/bootstrap.css') }}">
        <link rel="stylesheet" href="{{ asset('css/site.css') }}">
        {% block stylesheets %}{% endblock %}
        <link rel="icon" type="image/x-icon" href="{{ asset('favicon.ico') }}" />
    </head>
    <body>



        <div class="container">
            <div class="navbar">
                <div class="navbar-inner">
                    <a class="brand" href="#">Lunch Organizer</a>
                    <ul class="nav">
                        <li><a href="{{ path('organizer') }}">Organizer</a></li>
                        <li><a href="{{ path('user') }}">Users</a></li>
                        <li><a href="https://github.com/WEBclusive/lunch-organizer">Bugs & Contributions</a></li>
                    </ul>
                </div>
            </div>

            {% block body %}{% endblock %}
        </div>

        <script src="http://code.jquery.com/jquery-1.10.1.min.js"></script>
        <script src="http://code.jquery.com/jquery-migrate-1.2.1.min.js"></script>
        <script src="{{ asset('js/bootstrap.js') }}"></script>
        {% block javascripts %}{% endblock %}
    </body>
</html>
