<table class="table table-bordered table-condensed">
    <thead>
    <tr>
        <th>User</th>
        <th>Total</th>
        {% for date in renderDates  %}
            <th class="date {{ (date.format('N') > 5)? 'weekend':'weekday' }}">{{ date.format('D') }}<br>{{ date.format('d/m') }}</th>
        {% endfor %}
    </tr>
    </thead>
    <tbody>
    {% for user in users %}
        <tr>
            <td>{{ user.name }}</td>
            <td>{{ attribute(counts, user.id) }}</td>
            {% for date in renderDates %}
                {% set state = user.getStateByDate(date) %}
                <td
                   class="state-toggle state-{{ state }} {{ (date.format('N') > 5)? 'weekend':'weekday' }}"
                   data-user="{{ user.id }}"
                   data-state="{{ state }}"
                   data-date="{{ date.format('Ymd') }}"
                ></td>
            {% endfor %}
        </tr>
    {% endfor %}
    </tbody>
</table>
